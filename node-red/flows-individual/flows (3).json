    {
        "id": "build_query",
        "type": "function",
        "z": "historical_tab",
        "name": "Build MongoDB Query",
        "func": "// Get date range from flow context\nvar startTime = flow.get('start-time') || new Date(Date.now() - 86400000); // Default: last 24h\nvar endTime = flow.get('end-time') || new Date();\n\n// Build MongoDB query\nmsg.query = {\n    timestamp: {\n        $gte: new Date(startTime),\n        $lte: new Date(endTime)\n    }\n};\n\nmsg.sort = { timestamp: 1 }; // Sort by time ascending\nmsg.limit = 1000; // Limit results\n\nreturn msg;",
        "outputs": 1,
        "timeout": "",
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 370,
        "y": 200,
        "wires": [
            [
                "mongodb_read"
            ]
        ]
    },
    {
        "id": "mongodb_read",
        "type": "mongodb in",
        "z": "historical_tab",
        "mongodb": "local_mongodb",
        "name": "Read Historical Data",
        "collection": "historicaldata",
        "operation": "find",
        "x": 600,
        "y": 200,
        "wires": [
            [
                "debug_data",
                "split_data"
            ]
        ]
    },
    {
        "id": "split_data",
        "type": "function",
        "z": "historical_tab",
        "name": "Split Temp & Humidity",
        "func": "// Check if we have data\nif (!msg.payload || msg.payload.length === 0) {\n    node.warn(\"No data returned from MongoDB\");\n    return [null, null];\n}\n\nvar tempData = [];\nvar humidData = [];\n\nfor(var i = 0; i < msg.payload.length; i++) {\n    var record = msg.payload[i];\n    \n    // Use 'time' field (milliseconds) instead of timestamp\n    tempData.push({\n        x: record.time,\n        y: record.temp\n    });\n    \n    humidData.push({\n        x: record.time,\n        y: record.humidity\n    });\n}\n\nreturn [\n    {payload: [{series: [\"Temperature\"], data: [tempData]}]},\n    {payload: [{series: [\"Humidity\"], data: [humidData]}]}\n];",
        "outputs": 2,
        "timeout": "",
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 170,
        "y": 280,
        "wires": [
            [
                "temp_chart",
                "debug_temp"
            ],
            [
                "humid_chart",
                "debug_humid"
            ]
        ]
    },
